<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :place_id, "地域" %>
    <%= form.collection_select :place_id, Place.all, :id, :name ,:place_id => 1 %>
  </div>

  <div class="field">
    <%= form.label :image, "画像パス" %>
    <%= form.text_field :image, id: :item_image %>
  </div>

  <div class="field">
    <%= form.label :price, "価格" %>
    <%= form.number_field :price, id: :item_price %> 円
  </div>

  <div class="field">
    <%= form.label :detail, "詳細" %>
    <%= form.text_area :detail, id: :item_detail, :size=>"40x10"%>
  </div>

  <div class="field">
    <%= form.label :genre_id, "ジャンル" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name ,:genre_id => 1 %>
  </div>

<!--
  <div class="field">
    <%= form.label :student_id, "学籍番号" %>
    <%= form.number_field :student_id, id: :item_student_id %>
  </div>
-->

  <div class="field">
    <%= form.label :department_id, "学類" %>
    <%= form.collection_select :department_id, Department.all, :id, :name ,:department_id => 1 %>
  </div>

  <div class="field">
    <%= form.label :confirm, "パスワード" %>
    <%= form.text_field :confirm %>
  </div>

  <div class="actions">
    <%= form.submit "登録", :class => "color_btn"%>
  </div>
<% end %>
