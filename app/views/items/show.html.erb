<p id="notice"><%= notice %></p>

<p>
  <strong>名前:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>場所:</strong>
  <%= @item.place_id %>
</p>

<p>
  <strong>画像:</strong>
  <%= @item.image %>
</p>

<p>
  <strong>価格:</strong>
  <%= @item.price %>
</p>

<p>
  <strong>詳細:</strong>
  <%= @item.detail %>
</p>

<p>
  <strong>ジャンル:</strong>
  <%= @item.genre_id %>
</p>

<p>
  <strong>出品者の学籍番号:</strong>
  <%= @item.student_id %>
</p>

<p>
  <strong>学類:</strong>
  <%= @item.department_id %>
</p>

<p>
  <strong>コメント:</strong></p>
  <% comments = Comment.where(item_id: @item.id ) %>
  <% comments.each do |comment| %> r
      <%= comment.comment_body   %> t
      <%= comment.item_id %> y
      <%= @item.id %>
      </p>
  <% end %>
</p>


<%= form_with(model: Comment.new, local: true) do |form| %>
  <div class="field">
    <%= form.label :comment_body, "コメント入力" %>
    <%= form.text_area :comment_body, id: :comment_comment_body, item_id: @item.id, :size=>"40x10"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>







