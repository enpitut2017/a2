          <div class="card">
            <div class="card-content">
              <%= form_with(model: item, local: true) do |form| %>
<% if item.errors.any? %>
                <div class="alert">
                  <div class="error">
                    <p><%= item.errors.count %>個のエラーがあります。</p>
                    <ul class="browser-default">
  <% item.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
  <% end %>
                    </ul>
                  </div>
                </div>
<% end %>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.text_field :name, id: :item_name %>
                    <label for="item_name" class="active">商品名</label>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.collection_select :place_id, Place.all, :id, :name ,:place_id => 1 %>
                    <label>地域</label>
                    <p class="grey-text">お住まいの場所に一番近い場所を選んでください。</p>
                  </div>
                  <a class="btn secondary right" href="javascript:window.open('/map', 'map'); void(0);">地図から選択</a>
                </div>
                <div class="row">
                  <div class="col s12 file-field input-field">
                    <div class="btn">
                      <span>ファイルを選択</span>
                      <%= form.file_field :image, id: :item_image %>
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="PNG・JPEG形式">
                    </div>
                    <p class="grey-text">商品の写真をアップロードしてください。</p>
                  </div>
                </div>
                <div class="row valign-wrapper">
                  <div class="input-field col s6">
                    <%= form.number_field :price, id: :item_price %>
                    <label for="item_price" class="active">希望取引価格</label>
                  </div>
                  <div class="col s6">円</div>
                </div>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.text_area :detail, id: :item_detail, :class => "materialize-textarea" %>
                    <label for="item_detail">詳細情報</label>
                    <p class="grey-text">商品の状態、値下げの対応、運搬の対応など、購入者の参考となる情報を入力してください。</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.collection_select :genre_id, Genre.all, :id, :name ,:genre_id => 1 %>
                    <label>ジャンル</label>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.number_field :student_id, id: :item_student_id, :placeholder => "例：201512345" %>
                    <label for="item_student_id" class="active">学籍番号</label>
                    <p class="grey-text">あなたの学籍番号を9桁で間違えないように入力してください。</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12 input-field">
                    <%= form.collection_select :department_id, Department.all, :id, :name ,:department_id => 1 %>
                    <label>所属</label>
                    <p class="grey-text">所属する学類・研究科を選択してください。教科書等の商品が見つかりやすくなります。</p>
                  </div>
                </div>
                <div class="row center-align">
                  <p class="grey-text center-align">入力内容に誤りがないかもう一度確認してください。</p>
                  <%= form.submit "出品", :class => "btn" %>
                </div>
              <% end %>
            </div>
          </div>
