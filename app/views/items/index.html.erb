<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Image</th>
      <th>Price</th>
      <th>Detail</th>
      <th>Genre</th>
      <th>Student</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.place_id %></td>
        <td><%= item.image %></td>
        <td><%= item.price %></td>
        <td><%= item.detail %></td>
        <td><%= item.genre_id %></td>
        <td><%= item.student_id %></td>
        <td><%= item.department_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

