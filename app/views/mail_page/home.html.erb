<h1><%= link_to 'つくByeBuy', items_path %></h1>

<div class="header_tab">
    <div id="tab">
      <%= link_to '商品一覧', items_path %>
      <%= link_to '出品', new_item_path %>
      <%= link_to 'お問い合わせ', '../contact_page/home' %>
    </div>
</div>

<h2>出品者に連絡</h2>

<%= form_tag('../mail_page/done', method: "get") do %>
学籍番号<br>
  <%= text_field :mail, :student_id, :placeholder => "例) 201512345" %><br><br>
内容<br>
  <%= text_area :mail, :content, :size => "50x10" %> <br><br>
  <%= hidden_field :to_mail, :student_id, :value => params[:to_mail][:student_id] %>
  <%= hidden_field :to_mail, :item_id, :value => params[:to_mail][:item_id] %>
  <%= submit_tag('送信') %>
<% end %>
<br><br>
<%= link_to '戻る', :back, :class => "red_line"  %>
