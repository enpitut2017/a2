<h1>欲しいもの掲示板</h1>
<% @wants.each do |want| %>
  <%= want.content %>   --<%= want.created_at.to_s.slice(0, 16) %><br>
<% end %>
<%= form_tag(:controller => 'wants', :action => 'new') do %>
  <textarea name="content" style="width: 18em; height: 3rem;"></textarea>
  <button type="submit">送信</button>
<% end %>
